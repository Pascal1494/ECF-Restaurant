{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>IsVerified</th>
				<th>Firstname</th>
				<th>Lastname</th>
				<th>Pseudo</th>
				<th>Avatar</th>
				<th>Slug</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.lastname }}</td>
					<td>{{ user.pseudo }}</td>
					<td>{{ user.avatar }}</td>
					<td>{{ user.slug }}</td>
					<td>
						<a href="{{ path('app_user_show', {'slug': user.slug}) }}">show</a>
						<a href="{{ path('app_user_edit', {'slug': user.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('app_user_new') }}">Create new</a> #}
{% endblock %}
